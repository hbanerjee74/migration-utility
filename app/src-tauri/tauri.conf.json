{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Migration Utility",
  "version": "0.1.0",
  "identifier": "com.vibedata.migration-utility",
  "build": {
    "beforeDevCommand": "npm run sidecar:build && npm run dev:vite",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run sidecar:build && npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Migration Utility",
        "width": 1280,
        "height": 800,
        "minWidth": 1024,
        "minHeight": 720
      }
    ],
    "security": {
      "csp": "default-src 'self' tauri: asset: https://asset.localhost; style-src 'self' 'unsafe-inline'; font-src 'self' asset: data:; img-src 'self' asset: data: blob:"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "../../agent-sources/**/*",
      "../sidecar/dist/**/*"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
